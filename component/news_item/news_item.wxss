.news_item {
  height: 180rpx;
  margin: 10rpx;
  padding: 6px;
  background: white;
}

.news_item .news_item_left {
  width: 430rpx;
  padding: 20rpx 0rpx 0 0rpx;
}

.news_item .news_item_left .news_item_title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 430rpx;
  height: 110rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: black;
}

.news_item .news_item_left .news_item_bottom {
  height: 50rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #6a6a6a;
}

.news_item .news_item_left .news_item_bottom .icon-yanjing {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.news_item .news_item_right {
  padding: 23rpx 0 19rpx 29rpx;
}

.img {
  width: 229rpx;
  height: 138rpx;
  border-radius: 10rpx;
}